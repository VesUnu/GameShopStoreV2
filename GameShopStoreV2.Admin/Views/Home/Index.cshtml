                                <th>Title</th>
                                <th>Content</th>
                                <th>Received Date</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Email
                                </td>
                                <td> @item.Title</td>
